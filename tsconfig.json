{
  "compilerOptions": {
    "target": "ES6",
    "experimentalDecorators": false,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "outDir": "www",
    "verbatimModuleSyntax": true,
    "sourceMap": true,
  },
  "include": [
    "src/*"
  ]
}